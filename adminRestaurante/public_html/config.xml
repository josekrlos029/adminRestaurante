<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
        xmlns:gap	= "http://phonegap.com/ns/1.0"
        id		= "com.Nimble.tuDomicilioRestaurante"
        version 	= "1.0.0">

    <name>Tu Domicilio</name>

    <description>
        Pide tu comida favorita a tu restaurante favorito desde cualquier lugar de la Ciudad.
    </description>

    <author href="https://www.facebook.com/josekrlos029"
                email="josekrlos029@gmail.com">
        Jos√© Carlos Jimenez Montenegro 
    </author>

    <preference name="phonegap-version" value="3.3.0" />
    <preference name="orientation" value="portrait" />

    <gap:platforms>
        <gap:platform name="android" minVersion="2.1" />
        <gap:platform name="blackberry" project="widgets"/>
        <gap:platform name="ios" />
    </gap:platforms>
    
    <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.1.1" />
    
    <gap:plugin name="org.apache.cordova.geolocation" version="0.3.7" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.7" />    
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
   
</widget>